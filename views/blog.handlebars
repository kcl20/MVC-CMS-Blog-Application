<div class="text-center">
  <h2>{{name}}</h2>
  <p>{{description}}</p>
  <p>Created by {{user.name}} on {{format_date date_created}}</p>

    <form class="form new-blog-comment">
      <div class="form-group">
        <label for="blog-comment">Comment:</label>
        <textarea class="form-input" id="blog-comment" name="blog-comment"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" data-id="{{blog.id}}" class="btn btn-primary">Comment</button>
      </div>
    </form>

 {{#if comments.length}}
  <div class="col-md-6 blog-list">
    <h3>Comments:</h3>

    {{#each comments as |comment|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4>
          {{comment.id}}
          {{comment.description}}
          {{comment.date_created}}
          {{comment.user.name}}
        </h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{comment.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}



</div>
<script src="../js/blog.js"></script>